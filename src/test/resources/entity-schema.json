{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Entities",
  "type": "object",
  "required": [
    "name",
    "package",
    "fields"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Nom de l'entité",
      "pattern": "^[A-Z].*"
    },
    "extended": {
      "type": "string",
      "description": "Package de l'entité étendue"
    },
    "package": {
      "type": "string",
      "description": "Package de l'entité"
    },
    "fields": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "type"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Nom du champ"
          },
          "type": {
            "type": "string",
            "enum": [
              "boolean",
              "string",
              "integer",
              "long",
              "bigdecimal",
              "localdate",
              "localdatetime",
              "localtime",
              "entityRef"
            ],
            "description": "Type du champ"
          },
          "id": {
            "type": "boolean",
            "default": false,
            "description": "Si le champ est un identifiant"
          },
          "unique": {
            "type": "boolean",
            "default": false,
            "description": "Le champ est unique"
          },
          "nullable": {
            "type": "boolean",
            "default": true,
            "description": "Le champ est nullable"
          },
          "mappedBy": {
            "type": "string",
            "description": "Nom du champ de l'entité référencée"
          }
        }
      }
    }
  }
}
